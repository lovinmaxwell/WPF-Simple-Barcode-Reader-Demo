<Window x:Class="WpfSimpleBarcodeReaderDemo.SelectPdfPageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Select a PDF page number" Height="106" Width="466" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid Name="grid1">
            <Label Height="28" Name="pagesCountLabel" VerticalAlignment="Top" Margin="4,4,0,0" HorizontalAlignment="Left" Width="315">This PDF file contains {0} pages with images, select page:</Label>
            <ComboBox HorizontalAlignment="Right" Margin="0,6,12,0" Name="pagesComboBox" Width="107" Height="22" VerticalAlignment="Top" />
            <Button Margin="191,0,177,8" Name="button1" Height="25" VerticalAlignment="Bottom" Click="okButton_Click">OK</Button>
        </Grid>
    </Grid>
</Window>
